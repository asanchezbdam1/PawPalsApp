<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resource="clr-namespace:PawPalsApp.Resx"
             x:Class="PawPalsApp.Views.Account">


       
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ImageButton x:Name="ibtnSalir" Margin="5" Grid.Row="0" Grid.ColumnSpan="2" HorizontalOptions="Start"
                        Grid.Column="0" Source="drawable/cerrarSesion.png" CornerRadius="360" WidthRequest="50"  HeightRequest="50"></ImageButton>
        <StackLayout Grid.ColumnSpan="2" Grid.Row="1" Orientation="Vertical" HorizontalOptions="Center">
            <ImageButton x:Name="ibtnPerfil" Source="drawable/perfil.png" CornerRadius="360" WidthRequest="200" HeightRequest="200"></ImageButton>
            <Label Text="MariiPiliss" TextColor="Black"
                    HorizontalTextAlignment="Center" FontSize="28" Margin="0,10,0,0"></Label>
        </StackLayout>
        <StackLayout Padding="20,10,20,10" Grid.ColumnSpan="2" Grid.Row="2">
            <Label Text="{x:Static resource:AppResources.Personal_name}" TextColor="Black" 
                    FontSize="12"></Label>
            <Entry IsReadOnly="True" Text="Maria Pilar"
                    Margin="20,0,20,0" HorizontalTextAlignment="Center"></Entry>
        </StackLayout>
        <StackLayout Padding="20,10,20,10" Grid.ColumnSpan="2" Grid.Row="3" >
            <Label Text="Email" TextColor="Black" 
                    FontSize="12"></Label>
            <Entry IsReadOnly="True" Text="superpili@gmail.com" 
                    Margin="20,0,20,0" HorizontalTextAlignment="Center"></Entry>
        </StackLayout>
        <StackLayout Padding="20,10,20,10" Grid.Row="4" Grid.Column="0">
            <Label Text="{x:Static resource:AppResources.Country}" TextColor="Black" 
                    FontSize="12"></Label>
            <Entry IsReadOnly="True" Text="España" 
                    Margin="20,0,20,0" HorizontalTextAlignment="Center"></Entry>
        </StackLayout>
        <StackLayout Padding="20,10,20,10" Grid.Row="4" Grid.Column="1">
            <Label Text="{x:Static resource:AppResources.City}" TextColor="Black" 
                    FontSize="12"></Label>
            <Entry IsReadOnly="True" Text="Sangüesa" 
                    Margin="20,0,20,0" HorizontalTextAlignment="Center"></Entry>
        </StackLayout>

    </Grid>


</ContentPage>